{
  "name": "Text Drive",
  "description": "Just a text editor.",
  "version": "0.1",
  "icons": {
    "16": "icon/16x16.png",
    "96": "icon/96x96.png",
    "128": "icon/128x128.png",
    "256": "icon/256x256.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "23.0.1261",
  "offline_enabled": true,
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "unlimitedStorage",
    "storage",
    {"fileSystem": ["write"]}
  ],
  "file_handlers": {
    "text": {
      "title": "TextDrive",
      "icons": {"16": "icon/16x16.png", "96": "icon/96x96.png"},
      "types": ["text/*"],
      "extensions": ["c", "cc", "css", "html", "json", "js", "pl", "py", "txt"]
    }
  }
}
