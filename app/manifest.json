{
  "name": "Text Drive",
  "description": "Just a text editor.",
  "version": "0.0.12",
  "icons": {
    "128": "icon_128.png"
  },
  "manifest_version": 2,
  "offline_enabled": true,
  "platform_app": true,
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "windows",
    "experimental",
    "clipboardRead",
    "clipboardWrite",
    // for FileSystem API
    "unlimitedStorage",
    // chrome.storage
    "storage",
    "appWindow"
  ]
}