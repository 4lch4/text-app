{
  "name": "Text Drive",
  "description": "Just a text editor.",
  "version": "0.0.14",
  "icons": {
    "128": "icon_128.png",
    "16": "icon_16.png"
  },
  "manifest_version": 2,
  "offline_enabled": true,
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  "permissions": [
    "experimental",
    "clipboardRead",
    "clipboardWrite",
    "unlimitedStorage",
    "storage",
    "appWindow",
    "fileSystem"
  ],
  "intents": {
    "http://webintents.org/view" : [{
      "title" : "Txt Reader",
      "type" : ["text/*"],
      "href" : "/index.html",
      "disposition" : "window"
    }],
    "http://webintents.org/edit" : [{
      "title" : "Txt Reader",
      "type" : ["text/*"],
      "href" : "/index.html",
      "disposition" : "window"
    }]
  }
}
